{
  "name": "extester-runner",
  "displayName": "extester-runner",
  "description": "to be defined",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extester-runner.runAll",
        "title": "Extester Runner: Run all tests",
        "icon": "$(run-all)",
        "tooltip": "Run all tests"
      },
      {
        "command": "extester-runner.refreshTests",
        "title": "Extester Runner: Refresh tests",
        "icon": "$(refresh)",
        "tooltip": "Refresh list of tests"
      },
      {
        "command": "extester-runner.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "tooltip": "TBD"
      },
      {
        "command": "extester-runner.searchFiles",
        "title": "Search in ExTester Tree",
        "icon": "$(search)",
        "tooltip": "Search for files or folders in the tree view"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extesterRunner",
          "title": "ExTester Runner",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "extesterRunner": [
        {
          "id": "extesterView",
          "name": "Test Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "extester-runner.runAll",
          "when": "view == extesterView",
          "group": "navigation@2"
        },
        {
          "command": "extester-runner.refreshTests",
          "when": "view == extesterView",
          "group": "navigation@1"
        },
        {
          "command": "extester-runner.collapseAll",
          "when": "view == extesterView",
          "group": "navigation@3"
        },
        {
          "command": "extester-runner.searchFiles",
          "when": "view == extesterView",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
